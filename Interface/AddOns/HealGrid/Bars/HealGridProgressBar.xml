<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

<!--
        <HorizontalResizeImage name="HG_HealGridProgressBarStatusBarForegroundTemplate" texture="tint_square">
            <Size>
                <AbsPoint x="130" y="8" />
            </Size>
            <Sizes left="0" middle="130" right="0" />
            <TexCoords>
                <Middle x="63" y="449" />
            </TexCoords>
        </HorizontalResizeImage>

        <StatusBar name="HG_HealGridProgressBarStatusBarTemplate" background="" foreground="HG_HealGridProgressBarStatusBarForegroundTemplate" handleinput="false" popable="false" />
-->
		<DynamicImage name="HG_HealGridProgressBarStatusBarTemplate" texture="tint_square" handleinput="false" layer="secondary">
            <Size>
                <AbsPoint x="130" y="8" />
            </Size>
		</DynamicImage>

		<!-- ##### HealGrid ProgressBar Template ######################################################################## -->
        <Window name="HG_HealGridProgressBarTemplate" moveable="false" popable="false" handleinput="false" layer="default">

			<Windows>

				<!-- Border -->
       		    <DynamicImage name="$parentBorder" texture="tint_square" handleinput="false" layer="background">
           			<Anchors>
               			<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
               			<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
   		            </Anchors>
				</DynamicImage>

				<!-- Background -->
       		    <DynamicImage name="$parentBackground" texture="tint_square" handleinput="false" layer="secondary">
           			<Anchors>
               			<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
          		        	<AbsPoint x="1" y="1"/>
                   		</Anchor>
               			<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
           		    		<AbsPoint x="-1" y="-1"/>
       		            </Anchor>
   		            </Anchors>
				</DynamicImage>

				<!-- StatusBar -->
<!--
				<StatusBar name="$parentStatusBar" inherits="HG_HealGridProgressBarStatusBarTemplate" layer="secondary">
           			<Anchors>
               			<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentBackground" />
               			<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentBackground" />
   		            </Anchors>
				</StatusBar>
-->
				<DynamicImage name="$parentStatusBar" inherits="HG_HealGridProgressBarStatusBarTemplate">
           			<Anchors>
               			<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentBackground" />
   		            </Anchors>
				</DynamicImage>

				<!-- label left -->
                <Label name="$parentLabelLeft" font="font_alert_outline_half_tiny" maxchars="99" textalign="leftcenter" layer="overlay" handleinput="false">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentBackground">
           		    		<AbsPoint x="5" y="0"/>
       		            </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentBackground" />
                    </Anchors>
				</Label>

				<!-- label center -->
                <Label name="$parentLabelCenter" font="font_alert_outline_half_tiny" maxchars="99" textalign="center" layer="overlay" handleinput="false">
                    <Anchors>
						<!-- anchor to parent, not background, to allow display of smallest fonts in cases where bar grows very thin -->
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
                    </Anchors>
				</Label>

				<!-- label right -->
                <Label name="$parentLabelRight" font="font_alert_outline_half_tiny" maxchars="99" textalign="rightcenter" layer="overlay" handleinput="false">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentBackground" />
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentBackground">
           		    		<AbsPoint x="-5" y="0"/>
       		            </Anchor>
                    </Anchors>
				</Label>

			</Windows>

			<EventHandlers>
           		<EventHandler event="OnLButtonDown" function="HealGridMouseClick.UnitLButtonDown" />
           		<EventHandler event="OnLButtonUp" function="HealGridMouseClick.UnitLButtonUp" />
           		<EventHandler event="OnMButtonDown" function="HealGridMouseClick.UnitMButtonDown" />
           		<EventHandler event="OnMButtonUp" function="HealGridMouseClick.UnitMButtonUp" />
           		<EventHandler event="OnRButtonDown" function="HealGridMouseClick.UnitRButtonDown" />
           		<EventHandler event="OnRButtonUp" function="HealGridMouseClick.UnitRButtonUp" />
				<EventHandler event="OnMouseOver" function="HealGridUnitTooltip.StartTooltip" />
				<EventHandler event="OnMouseOverEnd" function="HealGridUnitTooltip.StopTooltip" />
			</EventHandlers>

		</Window>

    </Windows>
</Interface>
