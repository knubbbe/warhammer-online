<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ##### Tab: Tooltip ################################################################################ -->
		<Window name="HGG_TabTooltipWindowTemplate" inherits="HGG_TabWindowTemplate">
			<Windows>

				<!-- ===== Show Tooltip ======================================================================== -->
				<Window name="$parentShowTooltip" inherits="EA_LabelCheckButton">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridGuiTabTooltip.ShowTooltipClicked" />
					</EventHandlers>
				</Window>

			</Windows>
		</Window>

    </Windows>

</Interface>

