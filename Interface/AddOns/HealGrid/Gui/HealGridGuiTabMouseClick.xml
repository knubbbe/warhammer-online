<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ##### Tab7: MouseClick Templates ################################################################## -->

		<!-- ===== Template for one row of the list ===== -->
		<Button name="HGG_TabMouseClickListRowTemplate" inherits="EA_Button_ResizeIconFrame_NoNormalImage" >
			<Size>
				<AbsPoint x="750" y="26" />
			</Size>

			<Windows>

				<FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" handleinput="false">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
					</Anchors>
					<TintColor r="50" g="50" b="50" />
				</FullResizeImage>

				<Label name="$parentFrameType" inherits="EA_Label_ChatText" textalign="leftcenter" handleinput="false">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="10" y="0" />
						</Anchor>
						<Anchor point="topleft" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="100" y="26" />
						</Anchor>
					</Anchors>
				</Label>

				<Label name="$parentTargetType" inherits="EA_Label_ChatText" textalign="leftcenter" handleinput="false">
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentFrameType">
							<AbsPoint x="10" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentFrameType">
							<AbsPoint x="100" y="0" />
						</Anchor>
					</Anchors>
				</Label>

				<Label name="$parentMouseButton" inherits="EA_Label_ChatText" textalign="leftcenter" handleinput="false">
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentTargetType">
							<AbsPoint x="10" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentTargetType">
							<AbsPoint x="100" y="0" />
						</Anchor>
					</Anchors>
				</Label>

				<Label name="$parentModifierKey" inherits="EA_Label_ChatText" textalign="leftcenter" handleinput="false">
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentMouseButton">
							<AbsPoint x="10" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentMouseButton">
							<AbsPoint x="100" y="0" />
						</Anchor>
					</Anchors>
				</Label>

				<Label name="$parentAction" inherits="EA_Label_ChatText" textalign="leftcenter" handleinput="false">
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentModifierKey">
							<AbsPoint x="10" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentModifierKey">
							<AbsPoint x="150" y="0" />
						</Anchor>
					</Anchors>
				</Label>

				<Label name="$parentActionDetail" inherits="EA_Label_ChatText" textalign="leftcenter" handleinput="false" wordwrap="false">
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentAction">
							<AbsPoint x="10" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentAction">
							<AbsPoint x="200" y="0" />
						</Anchor>
					</Anchors>
				</Label>

			</Windows>

			<EventHandlers>
				<EventHandler event="OnLButtonUp" function="HealGridGuiTabMouseClick.ListSelectRow" />
			</EventHandlers>

		</Button>
		
		<!-- ===== Template for the sort button ===== -->
		<Button name="HGG_TabMouseClickSortButtonTemplate" inherits="EA_Button_ListSort" textalign="center" textAutoFitMinScale="1.0">
			<EventHandlers>
				<EventHandler event="OnLButtonUp" function="HealGridGuiTabMouseClick.OnSortList" />
<!--
				<EventHandler event="OnMouseOver" function="xxxx.OnMouseOverSortButton" />
-->
			</EventHandlers>
		</Button>

		<!-- ##### Tab6: MouseClick ############################################################################ -->

		<Window name="HGG_TabMouseClickWindowTemplate" inherits="HGG_TabWindowTemplate">
			<Windows>

				<!-- ===== Button Bar ===== -->
				<Window name="$parentSortButtonBar">

					<Size>
						<AbsPoint x="750" y="36" />
					</Size>

					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>

					<Windows>

						<Button name="$parentFrameTypeButton" inherits="HGG_TabMouseClickSortButtonTemplate" id="1">
							<Anchors>
								<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomleft" relativePoint="bottomright" relativeTo="$parent">
									<AbsPoint x="100" y="0" />
								</Anchor>
							</Anchors>
						</Button>

						<Button name="$parentTargetTypeButton" inherits="HGG_TabMouseClickSortButtonTemplate" id="2">
							<Anchors>
								<Anchor point="topright" relativePoint="topleft" relativeTo="$parentFrameTypeButton">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentFrameTypeButton">
									<AbsPoint x="100" y="0" />
								</Anchor>
							</Anchors>
						</Button>

						<Button name="$parentMouseButtonButton" inherits="HGG_TabMouseClickSortButtonTemplate" id="3">
							<Anchors>
								<Anchor point="topright" relativePoint="topleft" relativeTo="$parentTargetTypeButton">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentTargetTypeButton">
									<AbsPoint x="100" y="0" />
								</Anchor>
							</Anchors>
						</Button>

						<Button name="$parentModifierKeyButton" inherits="HGG_TabMouseClickSortButtonTemplate" id="4">
							<Anchors>
								<Anchor point="topright" relativePoint="topleft" relativeTo="$parentMouseButtonButton">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentMouseButtonButton">
									<AbsPoint x="100" y="0" />
								</Anchor>
							</Anchors>
						</Button>

						<Button name="$parentActionButton" inherits="HGG_TabMouseClickSortButtonTemplate" id="5">
							<Anchors>
								<Anchor point="topright" relativePoint="topleft" relativeTo="$parentModifierKeyButton">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentModifierKeyButton">
									<AbsPoint x="150" y="0" />
								</Anchor>
							</Anchors>
						</Button>

						<Button name="$parentActionDetailButton" inherits="HGG_TabMouseClickSortButtonTemplate" id="6">
							<Anchors>
								<Anchor point="topright" relativePoint="topleft" relativeTo="$parentActionButton">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentActionButton">
									<AbsPoint x="200" y="0" />
								</Anchor>
							</Anchors>
						</Button>

					</Windows>
				</Window>

				<!-- ===== List Box ===== -->
				<ListBox name="$parentList" scrollbar="EA_ScrollBar_DefaultVerticalChain" rowdef="HGG_TabMouseClickListRowTemplate" visiblerows="10" rowcount="100" rowspacing="0">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentSortButtonBar">
							<AbsPoint x="0" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentSortButtonBar">
							<AbsPoint x="24" y="260" />
						</Anchor>
					</Anchors>
					<ListData table="HealGridGuiTabMouseClick.listData" populationfunction="HealGridGuiTabMouseClick.Populate">
						<ListColumns>
							<ListColumn windowname="FrameType"		variable="frameType"		format="wstring" />
							<ListColumn windowname="TargetType"		variable="targetType"		format="wstring" />
							<ListColumn windowname="MouseButton"	variable="mouseButton"		format="wstring" />
							<ListColumn windowname="ModifierKey"	variable="modifierKey"		format="wstring" />
							<ListColumn windowname="Action"			variable="action"			format="wstring" />
							<ListColumn windowname="ActionDetail"	variable="actionDetail"		format="wstring" />
						</ListColumns>
					</ListData>
				</ListBox>

				<!-- ===== List: Add Button ===== -->
				<Button name="$parentListAdd" inherits="EA_Button_DefaultResizeable" font="font_chat_text" textalign="center">
            		<Anchors>
                		<Anchor point="topright" relativePoint="topleft" relativeTo="$parentSortButtonBar">
                    		<AbsPoint x="60" y="40" />
                		</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridGuiTabMouseClick.ListUnselectRow" />
					</EventHandlers>
				</Button>

				<!-- ===== List: Remove Button ===== -->
				<Button name="$parentListRemove" inherits="EA_Button_DefaultResizeable" font="font_chat_text" textalign="center">
            		<Anchors>
                		<Anchor point="bottom" relativePoint="top" relativeTo="$parentListAdd">
                    		<AbsPoint x="0" y="20" />
                		</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridGuiTabMouseClick.ListRemoveRow" />
					</EventHandlers>
				</Button>

				<!-- ===== Edit Boxes Frame ===== -->
				<FullResizeImage name="$parentEditBorder" inherits="EA_FullResizeImage_DefaultFrame" layer="background">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentList">
							<AbsPoint x="0" y="10" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
				</FullResizeImage>

				<!-- ===== ComboBox: FrameType ===== -->
				<Label name="$parentComboBoxFrameTypeLabel" inherits="HGG_ItemLabelTemplate">
					<Size>
						<AbsPoint x="140" y="24" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentEditBorder">
							<AbsPoint x="0" y="20" />
						</Anchor>
					</Anchors>
				</Label>

				<ComboBox name="$parentComboBoxFrameType" inherits="EA_ComboBox_DefaultResizable">
					<Size>
						<AbsPoint x="250" y="28" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentComboBoxFrameTypeLabel">
							<AbsPoint x="10" y="0" />
						</Anchor>
					</Anchors>
				</ComboBox>

				<!-- ===== ComboBox: TargetType ===== -->
				<Label name="$parentComboBoxTargetTypeLabel" inherits="HGG_ItemLabelTemplate">
					<Size>
						<AbsPoint x="140" y="24" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentEditBorder">
							<AbsPoint x="0" y="60" />
						</Anchor>
					</Anchors>
				</Label>

				<ComboBox name="$parentComboBoxTargetType" inherits="EA_ComboBox_DefaultResizable">
					<Size>
						<AbsPoint x="250" y="28" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentComboBoxTargetTypeLabel">
							<AbsPoint x="10" y="0" />
						</Anchor>
					</Anchors>
				</ComboBox>

				<!-- ===== ComboBox: MouseButton ===== -->
				<Label name="$parentComboBoxMouseButtonLabel" inherits="HGG_ItemLabelTemplate">
					<Size>
						<AbsPoint x="140" y="24" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentEditBorder">
							<AbsPoint x="410" y="20" />
						</Anchor>
					</Anchors>
				</Label>

				<ComboBox name="$parentComboBoxMouseButton" inherits="EA_ComboBox_DefaultResizable">
					<Size>
						<AbsPoint x="250" y="28" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentComboBoxMouseButtonLabel">
							<AbsPoint x="10" y="0" />
						</Anchor>
					</Anchors>
				</ComboBox>

				<!-- ===== Section: ModifierKey ===== -->
				<Label name="$parentModifierKeyLabel" inherits="HGG_ItemLabelTemplate">
					<Size>
						<AbsPoint x="140" y="24" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentEditBorder">
							<AbsPoint x="410" y="60" />
						</Anchor>
					</Anchors>
				</Label>

				<Window name="$parentCheckButtonModifierKeyShift" inherits="EA_LabelCheckButton" id="1">
					<Size>
						<AbsPoint x="80" y="32" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentModifierKeyLabel">
							<AbsPoint x="10" y="0" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridGuiTabMouseClick.ModifierKeyClicked" />
					</EventHandlers>
				</Window>

				<Window name="$parentCheckButtonModifierKeyCtrl" inherits="EA_LabelCheckButton" id="1">
					<Size>
						<AbsPoint x="70" y="32" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentCheckButtonModifierKeyShift">
							<AbsPoint x="10" y="0" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridGuiTabMouseClick.ModifierKeyClicked" />
					</EventHandlers>
				</Window>

				<Window name="$parentCheckButtonModifierKeyAlt" inherits="EA_LabelCheckButton" id="1">
					<Size>
						<AbsPoint x="70" y="32" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentCheckButtonModifierKeyCtrl">
							<AbsPoint x="10" y="0" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridGuiTabMouseClick.ModifierKeyClicked" />
					</EventHandlers>
				</Window>

				<Window name="$parentCheckButtonModifierKeyAny" inherits="EA_LabelCheckButton" id="2">
					<Size>
						<AbsPoint x="140" y="32" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentCheckButtonModifierKeyAlt">
							<AbsPoint x="10" y="0" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridGuiTabMouseClick.ModifierKeyClicked" />
					</EventHandlers>
				</Window>

				<!-- ===== ComboBox: Action ===== -->
				<Label name="$parentComboBoxActionLabel" inherits="HGG_ItemLabelTemplate">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentEditBorder">
							<AbsPoint x="150" y="100" />
						</Anchor>
					</Anchors>
				</Label>

				<ComboBox name="$parentComboBoxAction" inherits="EA_ComboBox_DefaultResizable">
					<Size>
						<AbsPoint x="250" y="28" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentComboBoxActionLabel">
							<AbsPoint x="10" y="0" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnSelChanged" function="HealGridGuiTabMouseClick.ActionChanged" />
					</EventHandlers>
				</ComboBox>

				<!-- ===== Label: ActionDetail ===== -->
				<Label name="$parentActionDetailLabel" inherits="HGG_ItemLabelTemplate">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentEditBorder">
							<AbsPoint x="150" y="140" />
						</Anchor>
					</Anchors>
				</Label>

				<!-- ===== Edit Box: ActionDetail ===== -->
				<EditBox name="$parentActionDetailEdit" inherits="EA_EditBox_DefaultFrame" history="15" maxchars="255" taborder="4">
					<Size>
						<AbsPoint x="550" y="32" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentActionDetailLabel">
							<AbsPoint x="10" y="0" />
						</Anchor>
					</Anchors>
					<EventHandlers>
					</EventHandlers>
				</EditBox>

				<!-- ===== ComboBox : ActionDetail ===== -->
				<ComboBox name="$parentActionDetailComboBox" inherits="EA_ComboBox_DefaultResizable">
					<Size>
						<AbsPoint x="250" y="28" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentActionDetailLabel">
							<AbsPoint x="10" y="0" />
						</Anchor>
					</Anchors>
				</ComboBox>

				<!-- ===== SpellList : Action Detail ===== -->
				<Window name="$parentActionDetailSpellList" inherits="HGG_SpellListWindowTemplate">
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentActionDetailLabel">
							<AbsPoint x="-30" y="0" />
						</Anchor>
					</Anchors>
				</Window>

				<!-- ===== Edit Box: Error message ===== -->
				<Label name="$parentEditErrorLabel" font="font_default_sub_heading" maxchars="400" textalign="leftcenter">
					<Size>
						<AbsPoint x="600" y="24" />
					</Size>
					<Anchors>
						<Anchor point="bottomleft" relativePoint="bottomleft" relativeTo="$parentEditBorder">
							<AbsPoint x="20" y="-20" />
						</Anchor>
					</Anchors>
					<Color r="255" g="0" b="0" />
				</Label>

				<!-- ===== Edit Box: Commit Button ===== -->
				<Button name="$parentEditCommit" inherits="EA_Button_DefaultResizeable" font="font_chat_text" textalign="center">
            		<Anchors>
                		<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentEditBorder">
                    		<AbsPoint x="-20" y="-20" />
                		</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridGuiTabMouseClick.EditCommit" />
					</EventHandlers>
				</Button>

			</Windows>
		</Window>

    </Windows>

</Interface>

