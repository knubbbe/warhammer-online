<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ##### Template/Class SpellList #################################################################### -->

		<!-- ===== Template for one row of the list ===== -->
		<Button name="HGG_SpellListRowTemplate" inherits="EA_Button_ResizeIconFrame_NoNormalImage" >
			<Size>
				<AbsPoint x="435" y="25" />
			</Size>

			<Windows>

				<FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" handleinput="false">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
					</Anchors>
					<TintColor r="50" g="50" b="50" />
				</FullResizeImage>

				<DynamicImage name="$parentIcon" textureScale="0.4" handleinput="false">
					<Size>
						<AbsPoint x="25" y="25" />
					</Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="5" y="0" />
						</Anchor>
					</Anchors>
				</DynamicImage>

				<Label name="$parentName" inherits="EA_Label_ChatText" textalign="leftcenter" handleinput="false">
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentIcon">
							<AbsPoint x="10" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentIcon">
							<AbsPoint x="400" y="0" />
						</Anchor>
					</Anchors>
				</Label>

			</Windows>

			<EventHandlers>
				<EventHandler event="OnLButtonUp" function="HealGridGuiSpellList.ListSelectRow" />
			</EventHandlers>

		</Button>
		
		<!-- ===== Template for the sort button ===== -->
		<Button name="HGG_SpellListSortButtonTemplate" inherits="EA_Button_ListSort" textalign="center" textAutoFitMinScale="1.0">
			<EventHandlers>
<!--
				<EventHandler event="OnLButtonUp" function="xxxx.SortList" />
				<EventHandler event="OnMouseOver" function="xxxx.OnMouseOverSortButton" />
-->
			</EventHandlers>
		</Button>

		<!-- ##### SpellList ################################################################################### -->

		<Window name="HGG_SpellListWindowTemplate">

			<Size>
				<AbsPoint x="460" y="170" />
			</Size>

			<Windows>

				<!-- ===== Background (for DEBUG) ===== -->
<!--
				<FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" handleinput="false">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
					</Anchors>
					<TintColor r="255" g="0" b="0" />
				</FullResizeImage>
-->

				<!-- ===== Button Bar ===== -->
				<Window name="$parentSortButtonBar">

					<Size>
						<AbsPoint x="435" y="36" />
					</Size>

					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>

					<Windows>

						<Button name="$parentIconButton" inherits="HGG_SpellListSortButtonTemplate" id="1">
							<Anchors>
								<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomleft" relativePoint="bottomright" relativeTo="$parent">
									<AbsPoint x="35" y="0" />
								</Anchor>
							</Anchors>
						</Button>

						<Button name="$parentNameButton" inherits="HGG_SpellListSortButtonTemplate" id="2">
							<Anchors>
								<Anchor point="topright" relativePoint="topleft" relativeTo="$parentIconButton">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentIconButton">
									<AbsPoint x="400" y="0" />
								</Anchor>
							</Anchors>
						</Button>

					</Windows>
				</Window>

				<!-- ===== List Box ===== -->
				<ListBox name="$parentList" scrollbar="EA_ScrollBar_DefaultVerticalChain" rowdef="HGG_SpellListRowTemplate" visiblerows="5" rowspacing="2">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentSortButtonBar">
							<AbsPoint x="0" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentSortButtonBar">
							<AbsPoint x="24" y="135" />
						</Anchor>
					</Anchors>
					<ListData table="HealGridGuiSpellList.listData" populationfunction="HealGridGuiSpellList.Populate">
						<ListColumns>
							<ListColumn windowname="Icon"		variable="iconNum"		format="icon" />
							<ListColumn windowname="Name"		variable="name"			format="wstring" />
						</ListColumns>
					</ListData>
				</ListBox>

			</Windows>
		</Window>

    </Windows>

</Interface>

