<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ##### Item Label ############################################################################### -->
		<Label name="HGG_ItemLabelTemplate" font="font_default_text_small" maxchars="255" textalign="rightcenter">
			<Size>
				<AbsPoint x="150" y="40" />
			</Size>
		</Label>

		<!-- ##### Sub heading ########3##################################################################### -->
		<Label name="HGG_SubHeadingTemplate" font="font_default_sub_heading" maxchars="255" textalign="leftcenter">
			<Size>
				<AbsPoint x="400" y="24" />
			</Size>
			<Color r="255" g="204" b="102" a="255" />
		</Label>

		<!-- ##### CheckButton ############################################################################## -->
		<Window name="HGG_LabelCheckButton">
			<Size>
				<AbsPoint x="400" y="32" />
			</Size>
			<EventHandlers>
				<EventHandler event="OnInitialize" function="EA_LabelCheckButton.Initialize" />
				<EventHandler event="OnLButtonUp" function="EA_LabelCheckButton.Toggle" />
			</EventHandlers>
			<Windows>
				<Button name="$parentButton" inherits="EA_Button_DefaultCheckBox" handleinput="false">
					<Anchors>
						<Anchor point="left" relativePoint="left" />
					</Anchors>
				</Button>
				<Label name="$parentLabel" inherits="EA_CheckButtonLabel" handleinput="false">
					<Size>
						<AbsPoint x="375" y="32" />
					</Size>
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentButton">
							<AbsPoint x="5" y="3" />
						</Anchor>
					</Anchors>
					<Color r="255" g="255" b="255" />
				</Label>
			</Windows>
		</Window>

		<!-- ##### Slider with Full Labels ################################################################## -->
		<SliderBar name="HGG_SliderFullLabels" inherits="EA_Default_SliderBar" numticks="9">
			<Size>
				<AbsPoint x="300" y="33" />
			</Size>
<!--
			<EventHandlers>
				<EventHandler event="OnSlide" function="HealGridGuiTabGroup.UnitFrameWidthChanged" />
			</EventHandlers>
-->
			<Windows>
				<Label name="$parentMinLabel" inherits="HGG_ItemLabelTemplate" textalign="left">
					<Size>
						<AbsPoint x="50" y="20" />
					</Size>
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
				</Label>
				<Label name="$parentMidLabel" inherits="HGG_ItemLabelTemplate" textalign="center">
					<Size>
						<AbsPoint x="75" y="20" />
					</Size>
					<Anchors>
						<Anchor point="bottom" relativePoint="top" relativeTo="$parent">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
				</Label>
				<Label name="$parentMaxLabel" inherits="HGG_ItemLabelTemplate" textalign="right">
					<Size>
						<AbsPoint x="50" y="20" />
					</Size>
					<Anchors>
						<Anchor point="bottomright" relativePoint="topright" relativeTo="$parent">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
				</Label>
			</Windows>
		</SliderBar>

		<!-- ##### ColorSelectButton ######################################################################## -->
		<Window name="HGG_ColorSelectButtonTemplate">
			<Size>
				<AbsPoint x="400" y="31" />
			</Size>
			<Windows>

				<Label name="$parentLabel" inherits="HGG_ItemLabelTemplate">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
				</Label>

				<Button name="$parentButton" font="font_clear_small_bold" layer="popup">
					<Size>
						<AbsPoint x="250" y="31" />
					</Size>
           			<Anchors>
               			<Anchor point="right" relativePoint="left" relativeTo="$parentLabel">
							<AbsPoint x="10" y="0" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridGuiUtility.ColorSelectEditForegroundColor" />
						<EventHandler event="OnRButtonUp" function="HealGridGuiUtility.ColorSelectEditBackgroundColor" />
					</EventHandlers>
				</Button>

				<DynamicImage name="$parentBorder" texture="tint_square" layer="background">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentButton" />
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentButton" />
					</Anchors>
					<TintColor r="150" g="150" b="150" />
				</DynamicImage>

				<DynamicImage name="$parentBackground" texture="tint_square" layer="default">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentButton">
							<AbsPoint x="1" y="1" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentButton">
							<AbsPoint x="-1" y="-1" />
						</Anchor>
					</Anchors>
					<TintColor r="0" g="0" b="0" />
				</DynamicImage>

				<Label name="$parentSign" font="font_clear_small_bold" textalign="center" layer="secondary">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentButton">
							<AbsPoint x="1" y="1" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentButton">
							<AbsPoint x="-1" y="-1" />
						</Anchor>
					</Anchors>
				</Label>

			</Windows>
		</Window>

		<!-- ##### Tab Window (container) ################################################################### -->
		<Window name="HGG_TabWindowTemplate">
			<Anchors>
				<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentBackground">
					<AbsPoint x="220" y="20" />
				</Anchor>
				<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentBackground">
					<AbsPoint x="-20" y="-20" />
				</Anchor>
			</Anchors>
		</Window>

    </Windows>

</Interface>

