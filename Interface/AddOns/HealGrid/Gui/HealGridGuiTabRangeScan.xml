<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ===== Template for the range scan data (InRange/OutOfRange/OutOfReach) =========================== -->
		<Window name="HGG_TabRangeScanDataTemplate" >
			<Size>
				<AbsPoint x="450" y="235" />
			</Size>
			<Windows>

				<!-- ===== Title =============================================================================== -->
				<Label name="$parentTitle" inherits="HGG_SubHeadingTemplate">
   					<Anchors>
           				<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
               				<AbsPoint x="0" y="0" />
   	    				</Anchor>
					</Anchors>
				</Label>

                <!-- ===== Pale ================================================================================ -->
				<Window name="$parentTimePale" inherits="RMet_SliderTemplate" numticks="10">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="0" y="20" />
						</Anchor>
					</Anchors>
				</Window>

                <!-- ===== Fade ================================================================================ -->
				<Window name="$parentTimeFade" inherits="RMet_SliderTemplate" numticks="10">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="0" y="80" />
						</Anchor>
					</Anchors>
				</Window>

                <!-- ===== ColorHard =========================================================================== -->
				<Window name="$parentColorHard" inherits="RMet_ColorPickerButtonTemplate">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="0" y="150" />
						</Anchor>
					</Anchors>
				</Window>

                <!-- ===== ColorSoft =========================================================================== -->
				<Window name="$parentColorSoft" inherits="RMet_ColorPickerButtonTemplate">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="0" y="190" />
						</Anchor>
					</Anchors>
				</Window>

			</Windows>
		</Window>

		<!-- ##### Tab: Range Scan ############################################################################# -->

		<Window name="HGG_TabRangeScanWindowTemplate" inherits="HGG_TabWindowTemplate">
			<Windows>

				<!-- ===== In Range ============================================================================ -->
				<Window name="$parentInRange" inherits="HGG_TabRangeScanDataTemplate">
   					<Anchors>
           				<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
               				<AbsPoint x="0" y="0" />
   	    				</Anchor>
					</Anchors>
				</Window>

				<!-- ===== Out of Range ======================================================================== -->
				<Window name="$parentOutOfRange" inherits="HGG_TabRangeScanDataTemplate">
   					<Anchors>
           				<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
               				<AbsPoint x="0" y="240" />
   	    				</Anchor>
					</Anchors>
				</Window>

				<!-- ===== Out of Reach ======================================================================== -->
				<Window name="$parentOutOfReach" inherits="HGG_TabRangeScanDataTemplate">
   					<Anchors>
           				<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
               				<AbsPoint x="0" y="480" />
   	    				</Anchor>
					</Anchors>
				</Window>

                <!-- ===== Status ============================================================================== -->
                <Window name="$parentStatus" inherits="RMet_CheckButtonTemplate">
                    <Anchors>
                        <Anchor point="top" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
                </Window>

				<!-- ===== Choose Spell ======================================================================== -->
				<Label name="$parentChooseSpellTitle" inherits="HGG_SubHeadingTemplate">
   					<Anchors>
           				<Anchor point="top" relativePoint="topleft" relativeTo="$parent">
               				<AbsPoint x="0" y="100" />
   	    				</Anchor>
					</Anchors>
				</Label>

				<!-- ===== FriendlySpell ======================================================================= -->
				<Label name="$parentFriendlySpellLabel" inherits="HGG_ItemLabelTemplate">
					<Size>
               			<AbsPoint x="120" y="40" />
					</Size>
   					<Anchors>
           				<Anchor point="top" relativePoint="topleft" relativeTo="$parent">
               				<AbsPoint x="0" y="140" />
   	    				</Anchor>
					</Anchors>
				</Label>

				<Label name="$parentFriendlySpellName" font="font_default_text_small" maxchars="100" textalign="leftcenter" layer="default" handleinput="false">
					<Size>
						<AbsPoint x="200" y="40" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentFriendlySpellLabel">
							<AbsPoint x="10" y="0" />
						</Anchor>
					</Anchors>
				</Label>

				<Button name="$parentFriendlySpellButton" inherits="EA_Button_DefaultResizeable" font="font_chat_text" textalign="center">
            		<Anchors>
                		<Anchor point="right" relativePoint="left" relativeTo="$parentFriendlySpellName">
                    		<AbsPoint x="10" y="0" />
                		</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridGuiTabRangeScan.SetFriendlySpell" />
					</EventHandlers>
				</Button>

				<!-- ===== Hostile Spell ================================================================= -->
				<Label name="$parentHostileSpellLabel" inherits="HGG_ItemLabelTemplate">
					<Size>
                  			<AbsPoint x="120" y="40" />
					</Size>
   					<Anchors>
           				<Anchor point="top" relativePoint="topleft" relativeTo="$parent">
               				<AbsPoint x="0" y="180" />
   	    				</Anchor>
					</Anchors>
				</Label>

				<Label name="$parentHostileSpellName" font="font_default_text_small" maxchars="100" textalign="leftcenter" layer="default" handleinput="false">
					<Size>
						<AbsPoint x="200" y="40" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentHostileSpellLabel">
							<AbsPoint x="10" y="0" />
						</Anchor>
					</Anchors>
				</Label>

				<Button name="$parentHostileSpellButton" inherits="EA_Button_DefaultResizeable" font="font_chat_text" textalign="center">
            		<Anchors>
                		<Anchor point="right" relativePoint="left" relativeTo="$parentHostileSpellName">
                    		<AbsPoint x="10" y="0" />
                		</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridGuiTabRangeScan.SetHostileSpell" />
					</EventHandlers>
				</Button>

				<!-- ===== ResurrectSpell ====================================================================== -->
				<Label name="$parentResurrectSpellLabel" inherits="HGG_ItemLabelTemplate">
					<Size>
               			<AbsPoint x="120" y="40" />
					</Size>
   					<Anchors>
           				<Anchor point="top" relativePoint="topleft" relativeTo="$parent">
               				<AbsPoint x="0" y="220" />
   	    				</Anchor>
					</Anchors>
				</Label>

				<Label name="$parentResurrectSpellName" font="font_default_text_small" maxchars="100" textalign="leftcenter" layer="default" handleinput="false">
					<Size>
						<AbsPoint x="200" y="40" />
					</Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentResurrectSpellLabel">
							<AbsPoint x="10" y="0" />
						</Anchor>
					</Anchors>
				</Label>

				<Button name="$parentResurrectSpellButton" inherits="EA_Button_DefaultResizeable" font="font_chat_text" textalign="center">
            		<Anchors>
                		<Anchor point="right" relativePoint="left" relativeTo="$parentResurrectSpellName">
                    		<AbsPoint x="10" y="0" />
                		</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridGuiTabRangeScan.SetResurrectSpell" />
					</EventHandlers>
				</Button>

				<!-- ===== SpellList ===================================================================== -->
				<Window name="$parentSpellSelect" inherits="HGG_SpellListWindowTemplate">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentResurrectSpellLabel">
							<AbsPoint x="0" y="50" />
						</Anchor>
					</Anchors>
				</Window>

			</Windows>
		</Window>

    </Windows>

</Interface>

