<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ===== Template for one row of the menu ===== -->
		<Button name="HGG_HealGridMenuItemTemplate" inherits="EA_Button_ResizeIconFrame_NoNormalImage" savesettings="true">
			<Size>
				<AbsPoint x="170" y="30" />
			</Size>

			<Windows>

				<FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" handleinput="false">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
					</Anchors>
					<TintColor r="50" g="50" b="50" />
				</FullResizeImage>

				<Label name="$parentLabel" inherits="EA_Label_ChatText" textalign="leftcenter" handleinput="false">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="5" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="-10" y="0" />
						</Anchor>
					</Anchors>
				</Label>

			</Windows>

			<EventHandlers>
				<EventHandler event="OnLButtonUp" function="HealGridGui.MenuItemSelected" />
			</EventHandlers>

		</Button>

		<!-- ##### Root GUI Window ###################################################################################### -->
        <Window name="HGG_HealGrid" movable="true" layer="popup" savesettings="true">
            <Size>
                <AbsPoint x="1200" y="800" />
            </Size>
            <Anchors>
                <Anchor point="center" relativePoint="center" relativeTo="">
                    <AbsPoint x="0" y="50" />
                </Anchor>
			</Anchors>

			<Windows>
				<!-- ===== Window Background =========================================================================== -->
				<Window name="$parentBackground" inherits="EA_Window_DefaultFrame">
            		<Anchors>
                		<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                    		<AbsPoint x="0" y="32" />
                		</Anchor>
                		<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
                    		<AbsPoint x="0" y="0" />
                		</Anchor>
					</Anchors>
				</Window>

				<!-- ===== Title bar and close button ================================================================== -->
				<Window name="$parentTitleBar" inherits="EA_TitleBar_Default" />

				<Button name="$parentClose" inherits="EA_Button_DefaultWindowClose">
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridGui.CloseGui" />
					</EventHandlers>
				</Button>

				<!-- ===== The menu pane (on the side) ================================================================= -->
				<ListBox name="$parentMenu" scrollbar="EA_ScrollBar_DefaultVerticalChain" rowdef="HGG_HealGridMenuItemTemplate" visiblerows="100" rowspacing="0">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="7" y="36" />
						</Anchor>
						<Anchor point="bottomleft" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="200" y="-8" />
						</Anchor>
					</Anchors>
					<ListData table="HealGridGui.menuData" populationfunction="HealGridGui.PopulateMenu">
						<ListColumns>
							<ListColumn windowname="Label"	variable="label"	format="wstring" />
						</ListColumns>
					</ListData>
				</ListBox>
				
				<!-- ===== The content windows ========================================================================= -->
				<!-- created in the code -->

			</Windows>

        </Window>

    </Windows>
</Interface>
