<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ##### SkinEditor : Skin Attribute Label ########################################################### -->

		<Window name="HGSE_SkinAttributeLabelTemplate" layer="secondary">

			<Anchors>
				<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
				<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
					<AbsPoint x="0" y="-50" />
				</Anchor>
			</Anchors>

			<Windows>

                <!-- ===== Edit Box: Value ===== -->
                <EditBox name="$parentValue" inherits="EA_EditBox_DefaultFrame" history="15" maxchars="255">
                    <Size>
                        <AbsPoint x="400" y="32" />
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="20" y="100" />
                        </Anchor>
                    </Anchors>
                </EditBox>

                <!-- ===== Help ===== -->
				<Button name="$parentHelp" inherits="EA_Button_DefaultResizeable" font="font_chat_text" textalign="center">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="botpleft" relativeTo="$parentValue">
							<AbsPoint x="0" y="40" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HGSESkinAttributeLabel.OpenHelp" />
					</EventHandlers>
				</Button>

			</Windows>
		</Window>

    </Windows>

</Interface>

