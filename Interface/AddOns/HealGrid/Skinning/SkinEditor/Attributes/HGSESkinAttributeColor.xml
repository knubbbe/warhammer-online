<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ##### ColorPickerButton ######################################################################## -->
		<Window name="HGSE_ColorPickerButtonTemplate">
			<Size>
				<AbsPoint x="250" y="31" />
			</Size>

			<Windows>

				<Button name="$parentButton" font="font_clear_small_bold" layer="popup">
					<Size>
						<AbsPoint x="250" y="31" />
					</Size>
           			<Anchors>
               			<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridSkinEditor.EditColor" />
					</EventHandlers>
				</Button>

				<DynamicImage name="$parentBorder" texture="tint_square" layer="background">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentButton" />
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentButton" />
					</Anchors>
					<TintColor r="150" g="150" b="150" />
				</DynamicImage>

				<DynamicImage name="$parentBackground" texture="tint_square" layer="default">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentButton">
							<AbsPoint x="1" y="1" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentButton">
							<AbsPoint x="-1" y="-1" />
						</Anchor>
					</Anchors>
					<TintColor r="0" g="0" b="0" />
				</DynamicImage>

				<Label name="$parentSign" font="font_clear_small_bold" textalign="center" layer="secondary">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentButton">
							<AbsPoint x="1" y="1" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentButton">
							<AbsPoint x="-1" y="-1" />
						</Anchor>
					</Anchors>
				</Label>

			</Windows>
		</Window>

		<!-- ##### SkinEditor : Skin Attribute Color ########################################################### -->

		<Window name="HGSE_SkinAttributeColorTemplate" layer="secondary">

			<Anchors>
				<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
				<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
					<AbsPoint x="0" y="-50" />
				</Anchor>
			</Anchors>

			<Windows>

                <!-- ===== ValueCode ===== -->
				<Window name="$parentValueCode" inherits="HGSE_ColorPickerButtonTemplate">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="21" y="99" />
                        </Anchor>
                    </Anchors>
				</Window>

                <!-- ===== ValueR ===== -->
                <EditBox name="$parentValueR" inherits="EA_EditBox_DefaultFrame" maxchars="3" tabindex="1">
                    <Size>
                        <AbsPoint x="50" y="32" />
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="20" y="140" />
                        </Anchor>
                    </Anchors>
                </EditBox>

                <!-- ===== ValueG ===== -->
                <EditBox name="$parentValueG" inherits="EA_EditBox_DefaultFrame" maxchars="3" tabindex="2">
                    <Size>
                        <AbsPoint x="50" y="32" />
                    </Size>
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentValueR">
                            <AbsPoint x="10" y="0" />
                        </Anchor>
                    </Anchors>
                </EditBox>

                <!-- ===== ValueB ===== -->
                <EditBox name="$parentValueB" inherits="EA_EditBox_DefaultFrame" maxchars="3" tabindex="3">
                    <Size>
                        <AbsPoint x="50" y="32" />
                    </Size>
                    <Anchors>
                        <Anchor point="right" relativePoint="left" relativeTo="$parentValueG">
                            <AbsPoint x="10" y="0" />
                        </Anchor>
                    </Anchors>
                </EditBox>

                <!-- ===== Hint ===== -->
				<Label name="$parentHint" font="font_clear_small" textalign="leftcenter">
                    <Size>
                        <AbsPoint x="400" y="32" />
                    </Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="20" y="180" />
						</Anchor>
					</Anchors>
				</Label>

			</Windows>
		</Window>

    </Windows>

</Interface>
