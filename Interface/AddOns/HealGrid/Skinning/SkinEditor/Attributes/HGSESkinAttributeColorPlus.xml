<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ##### SkinEditor : Skin Attribute ColorPlus ####################################################### -->

		<Window name="HGSE_SkinAttributeColorPlusTemplate" layer="secondary">

			<Anchors>
				<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
				<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
					<AbsPoint x="0" y="-50" />
				</Anchor>
			</Anchors>

			<Windows>

                <!-- ===== ValueSelect ===== -->
                <ComboBox name="$parentValueSelect" inherits="EA_ComboBox_DefaultResizable">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="20" y="100" />
                        </Anchor>
                    </Anchors>
					<EventHandlers>
						<EventHandler event="OnSelChanged" function="HGSESkinAttributeColorPlus.SelectionChanged" />
					</EventHandlers>
                </ComboBox>

                <!-- ===== ValueColor ===== -->
				<Window name="$parentValueColor" inherits="HGSE_ColorPickerButtonTemplate">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="20" y="141" />
                        </Anchor>
                    </Anchors>
				</Window>

			</Windows>
		</Window>

    </Windows>

</Interface>
