<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ===== Template for one row of the texture-list ===== -->
		<Button name="HGSE_SkinAttributeTextureItemTemplate" inherits="EA_Button_ResizeIconFrame_NoNormalImage" >
			<Size>
				<AbsPoint x="150" y="30" />
			</Size>

			<Windows>

				<FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" handleinput="false">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
					</Anchors>
					<TintColor r="50" g="50" b="50" />
				</FullResizeImage>

				<Label name="$parentLabel" inherits="EA_Label_ChatText" textalign="leftcenter" handleinput="false">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="5" y="0" />
						</Anchor>
						<Anchor point="bottomleft" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="150" y="0" />
						</Anchor>
					</Anchors>
				</Label>

			</Windows>

			<EventHandlers>
				<EventHandler event="OnLButtonUp" function="HGSESkinAttributeTexture.TextureSelected" />
			</EventHandlers>

		</Button>

		<!-- ##### SkinEditor : Skin Attribute Texture ######################################################### -->

		<Window name="HGSE_SkinAttributeTextureTemplate" layer="secondary">

			<Anchors>
				<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
				<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
					<AbsPoint x="0" y="-50" />
				</Anchor>
			</Anchors>

			<Windows>

				<!-- ===== The texture-scroll-list on the side ========================================================= -->
				<ListBox name="$parentList" scrollbar="EA_ScrollBar_DefaultVerticalChain" rowdef="HGSE_SkinAttributeTextureItemTemplate" visiblerows="5" rowspacing="0">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="20" y="90" />
						</Anchor>
						<Anchor point="topleft" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="190" y="240" />
						</Anchor>
					</Anchors>
					<ListData table="HGSESkinAttributeTexture.textureList" populationfunction="HGSESkinAttributeTexture.PopulateList">
						<ListColumns>
							<ListColumn windowname="Label"	variable="label"	format="wstring" />
						</ListColumns>
					</ListData>
				</ListBox>

                <!-- ===== Texture Preview ===== -->
				<DynamicImage name="$parentPreview" texture="tint_square" handleinput="false" layer="default">
                    <Size>
                        <AbsPoint x="256" y="64" />
                    </Size>
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="200" y="90" />
						</Anchor>
					</Anchors>
					<TintColor r="255" g="255" b="255" />
				</DynamicImage>

                <!-- ===== Texture Info ===== -->
				<Label name="$parentInfo" font="font_clear_small_bold" textalign="leftcenter" layer="secondary">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="200" y="220" />
						</Anchor>
						<Anchor point="topleft" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="500" y="240" />
						</Anchor>
					</Anchors>
				</Label>

			</Windows>
		</Window>

    </Windows>

</Interface>

