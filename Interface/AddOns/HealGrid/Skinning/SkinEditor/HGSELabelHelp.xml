<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ===== TagList: Row-Template ======================================================================= -->
		<Button name="HGSE_LabelHelpTagListRowTemplate" inherits="EA_Button_ResizeIconFrame_NoNormalImage" >
			<Size>
				<AbsPoint x="800" y="26" />
			</Size>

			<Windows>

				<FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" handleinput="false">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
					</Anchors>
					<TintColor r="50" g="50" b="50" />
				</FullResizeImage>

				<Label name="$parentTag" inherits="EA_Label_ChatText" textalign="leftcenter">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="10" y="0" />
						</Anchor>
						<Anchor point="topleft" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="200" y="26" />
						</Anchor>
					</Anchors>
					<Color r="255" g="215" b="0" />
				</Label>

				<Label name="$parentDescription" inherits="EA_Label_ChatText" textalign="leftcenter" handleinput="false">
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentTag">
							<AbsPoint x="0" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
				</Label>

			</Windows>

			<EventHandlers>
				<EventHandler event="OnLButtonUp" function="HGSELabelHelp.TagListSelectRow" />
			</EventHandlers>

		</Button>

		<!-- ===== HGSELabel: Sort Button Template =================================================================== -->
		<Button name="HGSE_LabelHelpTagListSortButtonTemplate" inherits="EA_Button_ListSort" textalign="center" textAutoFitMinScale="1.0">
<!--
			<EventHandlers>
				<EventHandler event="OnLButtonUp" function="HealGridSkinEditor.SkinTreeSort" />
			</EventHandlers>
-->
		</Button>

		<!-- ##### HGSELabelHelp Window ################################################################################# -->
        <Window name="HGSE_LabelHelp" movable="true" layer="popup">
            <Size>
                <AbsPoint x="850" y="800" />
            </Size>
            <Anchors>
                <Anchor point="center" relativePoint="center" relativeTo="">
                    <AbsPoint x="0" y="50" />
                </Anchor>
			</Anchors>

			<Windows>
				<!-- ===== Window Background =========================================================================== -->
				<Window name="$parentBackground" inherits="EA_Window_DefaultFrame">
            		<Anchors>
                		<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                    		<AbsPoint x="0" y="32" />
                		</Anchor>
                		<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
                    		<AbsPoint x="0" y="0" />
                		</Anchor>
					</Anchors>
				</Window>

				<!-- ===== Title bar and close button ================================================================== -->
				<Window name="$parentTitleBar" inherits="EA_TitleBar_Default" />

				<Button name="$parentClose" inherits="EA_Button_DefaultWindowClose">
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HGSELabelHelp.Close" />
					</EventHandlers>
				</Button>

				<!-- ===== Button Bar ===== -->
				<Window name="$parentSortButtonBar">

					<Size>
						<AbsPoint x="800" y="36" />
					</Size>

					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="10" y="40" />
						</Anchor>
					</Anchors>

					<Windows>

						<Button name="$parentTag" inherits="HGSE_LabelHelpTagListSortButtonTemplate" id="1">
							<Anchors>
								<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomleft" relativePoint="bottomright" relativeTo="$parent">
									<AbsPoint x="200" y="0" />
								</Anchor>
							</Anchors>
						</Button>

						<Button name="$parentDescription" inherits="HGSE_LabelHelpTagListSortButtonTemplate" id="2">
							<Anchors>
								<Anchor point="topright" relativePoint="topleft" relativeTo="$parentTag">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
									<AbsPoint x="0" y="0" />
								</Anchor>
							</Anchors>
						</Button>

					</Windows>

				</Window>

				<!-- ===== List Box ===== -->
				<ListBox name="$parentTagList" scrollbar="EA_ScrollBar_DefaultVerticalChain" rowdef="HGSE_LabelHelpTagListRowTemplate" visiblerows="25" rowcount="100" rowspacing="0">

<!--
<Windows>
<FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" handleinput="false">
	<Anchors>
		<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
		<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
	</Anchors>
	<TintColor r="255" g="0" b="0" />
</FullResizeImage>
</Windows>
-->
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentSortButtonBar">
							<AbsPoint x="0" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentSortButtonBar">
							<AbsPoint x="25" y="650" />
						</Anchor>
					</Anchors>
					<ListData table="HGSELabelHelp.tagListListData" populationfunction="HGSELabelHelp.TagListPopulate">
						<ListColumns>
							<ListColumn windowname="Tag"			variable="tag"			format="wstring" />
							<ListColumn windowname="Description"	variable="description"	format="wstring" />
						</ListColumns>
					</ListData>
				</ListBox>

				<!-- ===== Buttons ===================================================================================== -->
				<Button name="$parentCloseButton" inherits="EA_Button_DefaultResizeable" font="font_chat_text" textalign="center">
					<Anchors>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="-20" y="-20" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HGSELabelHelp.Close" />
					</EventHandlers>
				</Button>

			</Windows>

        </Window>

    </Windows>
</Interface>
