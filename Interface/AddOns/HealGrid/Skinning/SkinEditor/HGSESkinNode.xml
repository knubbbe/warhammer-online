<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ##### SkinEditor : Skin Node ###################################################################### -->

		<!-- ===== SkinNode: Row-Template ====================================================================== -->
		<Button name="HGSE_SkinNodeRowTemplate" inherits="EA_Button_ResizeIconFrame_NoNormalImage" >
			<Size>
				<AbsPoint x="490" y="26" />
			</Size>

			<Windows>

				<FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" handleinput="false">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
					</Anchors>
					<TintColor r="50" g="50" b="50" />
				</FullResizeImage>

				<Label name="$parentAttribute" inherits="EA_Label_ChatText" textalign="leftcenter" handleinput="false">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="10" y="0" />
						</Anchor>
						<Anchor point="topleft" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="240" y="26" />
						</Anchor>
					</Anchors>
				</Label>

				<Label name="$parentValue" inherits="EA_Label_ChatText" textalign="leftcenter" handleinput="false">
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentAttribute">
							<AbsPoint x="0" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentAttribute">
							<AbsPoint x="150" y="0" />
						</Anchor>
					</Anchors>
				</Label>

				<Label name="$parentDataType" inherits="EA_Label_ChatText" textalign="leftcenter" handleinput="false">
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentValue">
							<AbsPoint x="0" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentValue">
							<AbsPoint x="100" y="0" />
						</Anchor>
					</Anchors>
				</Label>

			</Windows>

			<EventHandlers>
				<EventHandler event="OnLButtonUp" function="HealGridSkinEditor.SkinNodeSelectRow" />
			</EventHandlers>

		</Button>
		
		<!-- ===== SkinNode: Sort Button Template ================================================================== -->
		<Button name="HGSE_SkinNodeSortButtonTemplate" inherits="EA_Button_ListSort" textalign="center" textAutoFitMinScale="1.0">
			<EventHandlers>
				<EventHandler event="OnLButtonUp" function="HealGridSkinEditor.SkinNodeSort" />
			</EventHandlers>
		</Button>

		<!-- ===== SkinNode: List Window =========================================================================== -->

		<Window name="HGSE_SkinNodeTemplate">

			<Size>
				<AbsPoint x="520" y="352" />
			</Size>

			<Windows>
<!--
<FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" handleinput="false">
	<Anchors>
		<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
		<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
	</Anchors>
	<TintColor r="0" g="255" b="0" />
</FullResizeImage>
-->

				<!-- ===== Button Bar ===== -->
				<Window name="$parentSortButtonBar">

					<Size>
						<AbsPoint x="490" y="36" />
					</Size>

					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>

					<Windows>

						<Button name="$parentAttribute" inherits="HGSE_SkinNodeSortButtonTemplate" id="1">
							<Anchors>
								<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomleft" relativePoint="bottomright" relativeTo="$parent">
									<AbsPoint x="240" y="0" />
								</Anchor>
							</Anchors>
						</Button>

						<Button name="$parentValue" inherits="HGSE_SkinNodeSortButtonTemplate" id="2">
							<Anchors>
								<Anchor point="topright" relativePoint="topleft" relativeTo="$parentAttribute">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentAttribute">
									<AbsPoint x="150" y="0" />
								</Anchor>
							</Anchors>
						</Button>

						<Button name="$parentDataType" inherits="HGSE_SkinNodeSortButtonTemplate" id="3">
							<Anchors>
								<Anchor point="topright" relativePoint="topleft" relativeTo="$parentValue">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentValue">
									<AbsPoint x="100" y="0" />
								</Anchor>
							</Anchors>
						</Button>

					</Windows>

				</Window>

				<!-- ===== List Box ===== -->
				<ListBox name="$parentList" scrollbar="EA_ScrollBar_DefaultVerticalChain" rowdef="HGSE_SkinNodeRowTemplate" visiblerows="12" rowcount="100" rowspacing="0">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentSortButtonBar">
							<AbsPoint x="0" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentSortButtonBar">
							<AbsPoint x="24" y="312" />
						</Anchor>
					</Anchors>
					<ListData table="HealGridSkinEditor.skinNodeListData" populationfunction="HealGridSkinEditor.SkinNodePopulate">
						<ListColumns>
							<ListColumn windowname="Attribute"	variable="attribute"	format="wstring" />
							<ListColumn windowname="Value"		variable="value"		format="wstring" />
							<ListColumn windowname="DataType"	variable="dataType"		format="wstring" />
						</ListColumns>
					</ListData>
				</ListBox>

			</Windows>
		</Window>

    </Windows>

</Interface>

