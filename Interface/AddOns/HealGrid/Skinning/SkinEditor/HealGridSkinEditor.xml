<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ##### Root GUI Window ###################################################################################### -->
        <Window name="HGSE_RootTemplate" inherits="HGG_TabWindowTemplate">

			<Windows>
				<!-- ===== SkinTree ==================================================================================== -->
				<Window name="HGSE_SkinTree" inherits="HGSE_SkinTreeTemplate">
            		<Anchors>
                		<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                    		<AbsPoint x="0" y="0" />
                		</Anchor>
            		</Anchors>
				</Window>

				<!-- ===== SkinNode ==================================================================================== -->
				<Window name="HGSE_SkinNode" inherits="HGSE_SkinNodeTemplate">
            		<Anchors>
                		<Anchor point="topright" relativePoint="topright" relativeTo="$parent">
                    		<AbsPoint x="0" y="0" />
                		</Anchor>
            		</Anchors>
        		</Window>

				<!-- ===== SkinAttribute =============================================================================== -->

				<Window name="HGSE_SkinAttributePanel">
					<Size>
						<AbsPoint x="520" y="300" />
					</Size>
            		<Anchors>
                		<Anchor point="bottomleft" relativePoint="topleft" relativeTo="HGSE_SkinNode">
                    		<AbsPoint x="0" y="20" />
                		</Anchor>
            		</Anchors>

					<Windows>

						<!-- ===== Enclosing Frame Border ===== -->
						<FullResizeImage name="$parentBorder" inherits="EA_FullResizeImage_DefaultFrame" layer="background">
							<Anchors>
								<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
								<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
							</Anchors>
						</FullResizeImage>

						<!-- ===== Content Frame ===== -->
						<Window name="$parentContent" layer="background">
							<Anchors>
								<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                    				<AbsPoint x="10" y="10" />
		                		</Anchor>
								<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
                    				<AbsPoint x="-10" y="-10" />
		                		</Anchor>
							</Anchors>
						</Window>

						<!-- ===== specific attribute frames ===== -->
						<!-- created in the lua "classes" -->

					</Windows>
				</Window>

                <!-- ===== SkinName ===== -->
                <Label name="$parentSkinName" font="font_default_text_small" maxchars="255" textalign="leftcenter" wordwrap="false">
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="bottomleft" relativeTo="$parent">
                            <AbsPoint x="0" y="0" />
                        </Anchor>
                    </Anchors>
					<Size>
						<AbsPoint x="300" y="30" />
					</Size>
					<Color r="255" g="204" b="102" a="255" />
                </Label>

				<!-- ===== Buttons ===================================================================================== -->

				<Button name="$parentLoadSkin" inherits="EA_Button_DefaultResizeable" font="font_chat_text" textalign="center">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="HGSE_SkinAttributePanel">
							<AbsPoint x="0" y="20" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridSkinEditor.OpenLoadSkin" />
					</EventHandlers>
				</Button>

				<Button name="$parentResetSkin" inherits="EA_Button_DefaultResizeable" font="font_chat_text" textalign="center">
					<Anchors>
						<Anchor point="bottom" relativePoint="top" relativeTo="HGSE_SkinAttributePanel">
							<AbsPoint x="0" y="20" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridSkinEditor.OpenResetSkin" />
					</EventHandlers>
				</Button>

				<Button name="$parentSaveSkin" inherits="EA_Button_DefaultResizeable" font="font_chat_text" textalign="center">
					<Anchors>
						<Anchor point="bottomright" relativePoint="topright" relativeTo="HGSE_SkinAttributePanel">
							<AbsPoint x="0" y="20" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridSkinEditor.OpenSaveSkin" />
					</EventHandlers>
				</Button>

			</Windows>

        </Window>

    </Windows>
</Interface>

