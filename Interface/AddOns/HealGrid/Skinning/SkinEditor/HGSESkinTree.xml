<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ##### SkinEditor : Skin Tree ###################################################################### -->

		<!-- ===== SkinTree: Row-Template ====================================================================== -->
		<Button name="HGSE_SkinTreeRowTemplate" inherits="EA_Button_ResizeIconFrame_NoNormalImage" >
			<Size>
				<AbsPoint x="400" y="26" />
			</Size>

			<Windows>

				<FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" handleinput="false">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
					</Anchors>
					<TintColor r="50" g="50" b="50" />
				</FullResizeImage>

				<Button name="$parentCollapseButton" textalign="leftcenter" layer="secondary">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="0" y="0" />
						</Anchor>
						<Anchor point="topleft" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="50" y="26" />
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="HealGridSkinEditor.SkinTreeCollapseNode" />
					</EventHandlers>
				</Button>

				<Label name="$parentCollapseSign" inherits="EA_Label_ChatText" textalign="leftcenter">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="10" y="0" />
						</Anchor>
						<Anchor point="topleft" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="50" y="26" />
						</Anchor>
					</Anchors>
				</Label>

				<Label name="$parentNode" inherits="EA_Label_ChatText" textalign="leftcenter" handleinput="false">
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentCollapseSign">
							<AbsPoint x="0" y="0" />
						</Anchor>
						<Anchor point="bottomLeft" relativePoint="bottomright" relativeTo="$parentAttributeCount">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>
				</Label>

				<Label name="$parentAttributeCount" inherits="EA_Label_ChatText" textalign="rightcenter" handleinput="false">
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="-50" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="-10" y="0" />
						</Anchor>
					</Anchors>
				</Label>

			</Windows>

			<EventHandlers>
				<EventHandler event="OnLButtonUp" function="HealGridSkinEditor.SkinTreeSelectRow" />
			</EventHandlers>

		</Button>
		
		<!-- ===== SkinTree: Sort Button Template ================================================================== -->
		<Button name="HGSE_SkinTreeSortButtonTemplate" inherits="EA_Button_ListSort" textalign="center" textAutoFitMinScale="1.0">
<!--
			<EventHandlers>
				<EventHandler event="OnLButtonUp" function="HealGridSkinEditor.SkinTreeSort" />
			</EventHandlers>
-->
		</Button>

		<!-- ===== SkinTree: List Window =========================================================================== -->

		<Window name="HGSE_SkinTreeTemplate">

			<Size>
				<AbsPoint x="430" y="690" />
			</Size>

			<Windows>
<!--
<FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_TintableSolidBackground" handleinput="false">
	<Anchors>
		<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent" />
		<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent" />
	</Anchors>
	<TintColor r="255" g="0" b="0" />
</FullResizeImage>
-->

				<!-- ===== Button Bar ===== -->
				<Window name="$parentSortButtonBar">

					<Size>
						<AbsPoint x="400" y="36" />
					</Size>

					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="0" y="0" />
						</Anchor>
					</Anchors>

					<Windows>

						<Button name="$parentCollapseSign" inherits="HGSE_SkinTreeSortButtonTemplate" id="1">
							<Anchors>
								<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomleft" relativePoint="bottomright" relativeTo="$parent">
									<AbsPoint x="50" y="0" />
								</Anchor>
							</Anchors>
						</Button>

						<Button name="$parentNode" inherits="HGSE_SkinTreeSortButtonTemplate" id="2">
							<Anchors>
								<Anchor point="topright" relativePoint="topleft" relativeTo="$parentCollapseSign">
									<AbsPoint x="0" y="0" />
								</Anchor>
								<Anchor point="bottomleft" relativePoint="bottomright" relativeTo="$parentAttributeCount">
									<AbsPoint x="0" y="0" />
								</Anchor>
							</Anchors>
						</Button>

						<Button name="$parentAttributeCount" inherits="HGSE_SkinTreeSortButtonTemplate" id="3">
							<Anchors>
								<Anchor point="topright" relativePoint="topleft" relativeTo="$parent">
									<AbsPoint x="-50" y="0" />
								</Anchor>
								<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
									<AbsPoint x="0" y="0" />
								</Anchor>
							</Anchors>
						</Button>

					</Windows>

				</Window>

				<!-- ===== List Box ===== -->
				<ListBox name="$parentList" scrollbar="EA_ScrollBar_DefaultVerticalChain" rowdef="HGSE_SkinTreeRowTemplate" visiblerows="25" rowcount="100" rowspacing="0">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentSortButtonBar">
							<AbsPoint x="0" y="0" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentSortButtonBar">
							<AbsPoint x="24" y="650" />
						</Anchor>
					</Anchors>
					<ListData table="HealGridSkinEditor.skinTreeListData" populationfunction="HealGridSkinEditor.SkinTreePopulate">
						<ListColumns>
							<ListColumn windowname="CollapseSign"	variable="collapseSign"		format="wstring" />
							<ListColumn windowname="Node"			variable="node"				format="wstring" />
							<ListColumn windowname="AttributeCount"	variable="attributeCount"	format="wstring" />
						</ListColumns>
					</ListData>
				</ListBox>

			</Windows>
		</Window>

    </Windows>

</Interface>

