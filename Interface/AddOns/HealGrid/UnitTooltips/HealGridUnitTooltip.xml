<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>

		<!-- ##### Unit Tooltip Template ################################################################################ -->
		<Window name="HG_HealGridUnitTooltipTemplate" moveable="false" popable="false" handleinput="false" layer="popup" savesettings="false">

            <Size>
                <AbsPoint x="200" y="105" />
			</Size>

			<Windows>

                <!-- Border -->
                <DynamicImage name="$parentBorder" texture="tint_square" handleinput="false" layer="background">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
                            <AbsPoint x="0" y="0"/>
                        </Anchor>
                    </Anchors>
					<TintColor r="0" g="0" b="0" />
				</DynamicImage>

                <!-- Unit Name Background -->
                <DynamicImage name="$parentUnitNameBackground" texture="tint_square" handleinput="false" layer="secondary">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentBorder">
                            <AbsPoint x="1" y="1"/>
                        </Anchor>
                        <Anchor point="topright" relativePoint="bottomright" relativeTo="$parentBorder">
                            <AbsPoint x="-32" y="19"/>
                        </Anchor>
                    </Anchors>
					<TintColor r="0" g="200" b="0" />
				</DynamicImage>

                <!-- Unit Name -->
                <Label name="$parentUnitName" font="font_clear_small_bold" textalign="leftcenter" layer="popup" handleinput="false">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentUnitNameBackground">
                            <AbsPoint x="5" y="0"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentUnitNameBackground" />
                    </Anchors>
				</Label>

                <!-- Unit Level Background -->
                <DynamicImage name="$parentUnitLevelBackground" texture="tint_square" handleinput="false" layer="secondary">
                    <Anchors>
                        <Anchor point="topright" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="-30" y="1"/>
                        </Anchor>
                        <Anchor point="topright" relativePoint="bottomright" relativeTo="$parent">
                            <AbsPoint x="-1" y="19"/>
                        </Anchor>
                    </Anchors>
					<TintColor r="255" g="0" b="0" />
				</DynamicImage>

                <!-- Unit Level -->
                <Label name="$parentUnitLevel" font="font_clear_small_bold" textalign="center" layer="popup" handleinput="false">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parentUnitLevelBackground" />
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentUnitLevelBackground" />
                    </Anchors>
				</Label>

				<!-- Container for the PlayerCharacater (PC) data -->
				<Window name="$parentPC" >
                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentUnitNameBackground">
                            <AbsPoint x="0" y="2"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentUnitLevelBackground">
                            <AbsPoint x="0" y="34"/>
                        </Anchor>
                    </Anchors>
	
					<Windows>
                		<!-- Unit Career Icon -->
               			<DynamicImage name="$parentUnitCareerIcon" filtering="true" layer="default">
            				<Size>
                				<AbsPoint x="32" y="32" />
							</Size>
                    		<Anchors>
                        		<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            		<AbsPoint x="0" y="0"/>
                        		</Anchor>
                    		</Anchors>
                    		<TexDims x="32" y="32" />
                		</DynamicImage>

                		<!-- Unit Career Background -->
                		<DynamicImage name="$parentUnitCareerBackground" texture="tint_square" handleinput="false" layer="secondary">
                    		<Anchors>
                        		<Anchor point="topright" relativePoint="topleft" relativeTo="$parentUnitCareerIcon">
                            		<AbsPoint x="2" y="0"/>
                        		</Anchor>
                        		<Anchor point="topright" relativePoint="bottomright" relativeTo="$parent">
                            		<AbsPoint x="0" y="16"/>
                        		</Anchor>
                    		</Anchors>
							<TintColor r="30" g="30" b="30" />
						</DynamicImage>

                		<!-- Unit Career -->
                		<Label name="$parentUnitCareer" font="font_clear_small" textalign="leftcenter" layer="popup" handleinput="false">
                    		<Anchors>
                        		<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentUnitCareerBackground">
                            		<AbsPoint x="3" y="0"/>
                        		</Anchor>
                        		<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentUnitCareerBackground">
                            		<AbsPoint x="0" y="0"/>
                        		</Anchor>
                    		</Anchors>
						</Label>

                		<!-- Unit Race Background -->
                		<DynamicImage name="$parentUnitRaceBackground" texture="tint_square" handleinput="false" layer="secondary">
                    		<Anchors>
                        		<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentUnitCareerBackground">
                            		<AbsPoint x="0" y="1"/>
                        		</Anchor>
                        		<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentUnitCareerBackground">
                            		<AbsPoint x="0" y="17"/>
                        		</Anchor>
                    		</Anchors>
							<TintColor r="30" g="30" b="30" />
						</DynamicImage>

                		<!-- Unit Race -->
                		<Label name="$parentUnitRace" font="font_clear_small" textalign="left" layer="popup" handleinput="false">
                    		<Anchors>
                        		<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentPCUnitRaceBackground">
                            		<AbsPoint x="3" y="0"/>
                        		</Anchor>
                        		<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentPCUnitRaceBackground">
                            		<AbsPoint x="0" y="0"/>
                        		</Anchor>
                    		</Anchors>
						</Label>

					</Windows>
				</Window>

				<!-- Mouse cast actions -->
				<Window name="$parentActions">

                    <Anchors>
                        <Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentPC">
                            <AbsPoint x="0" y="2"/>
                        </Anchor>
                        <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
                            <AbsPoint x="-1" y="-1"/>
                        </Anchor>
                    </Anchors>

					<Windows>

                		<!-- Background -->
                		<DynamicImage name="$parentBackground" texture="tint_square" handleinput="false" layer="default">
                    		<Anchors>
                        		<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            		<AbsPoint x="0" y="0"/>
                        		</Anchor>
                        		<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
                            		<AbsPoint x="0" y="0"/>
                        		</Anchor>
                    		</Anchors>
							<TintColor r="50" g="50" b="50" />
						</DynamicImage>
		
                		<!-- LMB Label -->
                		<Label name="$parentLMBLabel" font="font_clear_small" textalign="right" layer="default" handleinput="false">
                    		<Anchors>
                        		<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentBackground" />
                        		<Anchor point="topleft" relativePoint="bottomright" relativeTo="$parentBackground">
                            		<AbsPoint x="40" y="16"/>
                        		</Anchor>
                    		</Anchors>
						</Label>
		
                		<!-- LMB Action -->
                		<Label name="$parentLMBAction" font="font_clear_small" textalign="left" layer="default" handleinput="false">
                    		<Anchors>
                        		<Anchor point="topright" relativePoint="topleft" relativeTo="$parentLMBLabel">
                            		<AbsPoint x="10" y="0"/>
                        		</Anchor>
                        		<Anchor point="topright" relativePoint="bottomright" relativeTo="$parentBackground">
                            		<AbsPoint x="0" y="16"/>
                        		</Anchor>
                    		</Anchors>
						</Label>
		
                		<!-- MMB Label -->
                		<Label name="$parentMMBLabel" font="font_clear_small" textalign="right" layer="default" handleinput="false">
                    		<Anchors>
                        		<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentLMBLabel" />
                        		<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentLMBLabel">
                            		<AbsPoint x="0" y="16"/>
                        		</Anchor>
                    		</Anchors>
						</Label>
		
                		<!-- MMB Action -->
                		<Label name="$parentMMBAction" font="font_clear_small" textalign="left" layer="default" handleinput="false">
                    		<Anchors>
                        		<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentLMBAction" />
                        		<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentLMBAction">
                            		<AbsPoint x="0" y="16"/>
                        		</Anchor>
                    		</Anchors>
						</Label>
		
                		<!-- RMB Label -->
                		<Label name="$parentRMBLabel" font="font_clear_small" textalign="right" layer="default" handleinput="false">
                    		<Anchors>
                        		<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentMMBLabel" />
                        		<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentMMBLabel">
                            		<AbsPoint x="0" y="16"/>
                        		</Anchor>
                    		</Anchors>
						</Label>
		
                		<!-- RMB Action -->
                		<Label name="$parentRMBAction" font="font_clear_small" textalign="left" layer="default" handleinput="false">
                    		<Anchors>
                        		<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentMMBAction" />
                        		<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parentMMBAction">
                            		<AbsPoint x="0" y="16"/>
                        		</Anchor>
                    		</Anchors>
						</Label>

					</Windows>
				</Window>

			</Windows>

			<EventHandlers>
           		<EventHandler event="OnUpdate" function="HealGridUnitTooltip.OnUpdate" />
			</EventHandlers>

		</Window>

		<!-- ##### Unit Tooltip Anchor ################################################################################## -->
		<Window name="HG_HealGridUnitTooltipAnchor" moveable="false" popable="false" handleinput="false" layer="default" savesettings="true">

            <Size>
                <AbsPoint x="200" y="105" />
			</Size>

       		<Anchors>
           		<Anchor point="right" relativePoint="right" relativeTo="Root" />
       		</Anchors>

		</Window>

    </Windows>
</Interface>

