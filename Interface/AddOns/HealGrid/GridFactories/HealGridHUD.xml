<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">

	<Windows>
	
		<!-- ##### The HUD Template ##################################################################################### -->
        <Window name="HG_HealGridHUDTemplate" inherits="HG_HealGridGridTemplate">
            <Size>
                <AbsPoint x="250" y="60" />
            </Size>
        </Window>

		<!-- ##### The HUD Main ######################################################################################### -->

		<Label name="HG_HealGridHUDMainLabelTargetTemplate" font="font_clear_medium_bold" maxchars="255" textalign="bottom" textautofitminscale="0.5">
			<Anchors>
				<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
               		<AbsPoint x="0" y="-30" />
          		</Anchor>
				<Anchor point="topright" relativePoint="bottomright" relativeTo="$parent">
               		<AbsPoint x="0" y="-2" />
           		</Anchor>
			</Anchors>
		</Label>

		<Window name="HG_HealGridHUDMainTemplate" inherits="HG_HealGridHUDTemplate">
            <Anchors>
                <Anchor point="center" relativePoint="center" relativeTo="">
                    <AbsPoint x="0" y="80" />
                </Anchor>
			</Anchors>
		</Window>

    </Windows>
</Interface>

