<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
  <Windows>
    <Window name="WSCTAnimationFrame" movable="false" handleinput="false" layer="default" savesettings="false">
      <Size>
        <AbsPoint x="1" y="1" />
      </Size>
      <Windows>
        <DynamicImage name="$parentIcon" texture="" texturescale="1" layer="background" handleinput="false">
          <Size>
            <AbsPoint x="64" y="64" />
          </Size>
        </DynamicImage>
        <Label name="$parentText" font="font_clear_large_bold" textalign="center" autoresize="true" wordwrap="false" maxchars="30" sticky="false">
          <Size>
            <AbsPoint x="600" y="100" />
          </Size>
          <Color r="255" g="255" b="255" a="255" />
        </Label>
      </Windows>
    </Window>
    
    <Window name="WSCTContainer" handleinput="false" layer="default">
        <Anchors>
            <Anchor point="topleft" relativePoint="topleft" />
            <Anchor point="bottomright" relativePoint="bottomright" />
        </Anchors>
    </Window>
  </Windows>
</Interface>
